<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Native mobile testing Suite">
    <parameter name="appType" value="native"/>
    <parameter name="platformName" value="Android"/>
    <parameter name="deviceName" value="HMD GLOBAL  6.1"/>
    <parameter name="appPackage" value="platkovsky.alexey.epamtestapp"/>
    <parameter name="appActivity" value="platkovsky.alexey.epamtestapp.activities.LoginActivity"/>
    <test name="Native tests">
        <groups>
            <run>
                <include name="native"/>
            </run>
        </groups>
        <classes>
            <class name="scenarios.nativeMobileTests"></class>
        </classes>
    </test>
</suite>