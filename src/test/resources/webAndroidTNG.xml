<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web mobile testing Suite">
    <parameter name="platformName" value="Android"></parameter>
    <parameter name="appType" value="web"></parameter>
    <parameter name="deviceName" value="SONY G3112"></parameter>
    <parameter name="platformVersion" value="8.0.0"/>
    <parameter name="browserName" value="Chrome"></parameter>
    <parameter name="company" value="EPAM"></parameter>
    <test name="Web tests">
        <groups>
            <run>
                <include name="web"/>
            </run>
        </groups>
        <packages>
            <package name="scenarios"/>
        </packages>
    </test>
</suite>