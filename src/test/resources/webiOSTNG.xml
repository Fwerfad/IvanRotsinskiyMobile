<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Web mobile testing Suite">
    <parameter name="platformName" value="iOS"/>
    <parameter name="appType" value="web"/>
    <parameter name="deviceName" value="IPAD 11,1"/>
    <parameter name="platformVersion" value="14.1"/>
    <parameter name="browserName" value="safari"/>
    <parameter name="company" value="EPAM"/>
    <test name="Web tests">
        <groups>
            <run>
                <include name="web"/>
            </run>
        </groups>
        <packages>
            <package name="scenarios"/>
        </packages>
    </test>
</suite>